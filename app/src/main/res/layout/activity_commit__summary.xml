<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.moneyspeaks.Commit_Summary"
    >

    <TextView android:text="Commitment Summary" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SummaryTitle"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You&apos;re going to"
        android:id="@+id/goingTo"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/SummaryTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="goal"
        android:id="@+id/goalID"
        android:layout_alignTop="@+id/goingTo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="for"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/goalID"
        android:layout_toRightOf="@+id/SummaryTitle"
        android:layout_toEndOf="@+id/SummaryTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="timeReqSummary"
        android:ems="10"
        android:id="@+id/timeReqSummary"
        android:layout_below="@+id/goingTo"
        android:layout_alignRight="@+id/goingTo"
        android:layout_alignEnd="@+id/goingTo"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classify1Summary"
        android:text="classify1Summary"
        android:layout_below="@+id/timeReqSummary"
        android:layout_toLeftOf="@+id/classify2Summary"
        android:layout_toStartOf="@+id/classify2Summary"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="every"
        android:id="@+id/every"
        android:layout_alignTop="@+id/classify1Summary"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="classify2Summary"
        android:id="@+id/classify2Summary"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/classify1Summary"
        android:layout_toRightOf="@+id/timeReqSummary"
        android:layout_toEndOf="@+id/timeReqSummary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your wager is"
        android:id="@+id/textView12"
        android:layout_below="@+id/classify2Summary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="91dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="10"
        android:id="@+id/wager"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignLeft="@+id/SummaryTitle"
        android:layout_alignStart="@+id/SummaryTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="per missed goal."
        android:id="@+id/textView13"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView12"
        android:layout_toLeftOf="@+id/SummaryTitle"
        android:layout_toStartOf="@+id/SummaryTitle" />



