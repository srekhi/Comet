<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.moneyspeaks.SignUpPage">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/email_logo"
        android:background="@color/bt_black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/stick_figure_username"
        android:background="@color/bt_black"
        android:layout_below="@+id/email_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

<!-- BELOW IS THE CREATE USERNAME BLOCK WITH ID: username_field -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Create a username"
        android:ems="10"
        android:id="@+id/username_field"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/email_field"
        android:layout_alignStart="@+id/email_field" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/password_lock"
        android:background="@color/bt_black"
        android:layout_below="@+id/username_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_field"
        android:hint="And a Password"
        android:inputType="textPassword"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/registerbutton"
        android:layout_toEndOf="@+id/registerbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I&apos;m done!"
        android:id="@+id/registerbutton"
        android:onClick="registerThis"
        android:layout_below="@+id/password_field"
        android:layout_marginTop="37dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_field"
        android:hint="Email Address"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or log in with fb or twitter w/e"
        android:id="@+id/button6"
        android:layout_below="@+id/registerbutton"
        android:layout_alignLeft="@+id/password_field"
        android:layout_alignStart="@+id/password_field"
        android:layout_marginTop="89dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We&apos;re happy you&apos;re signing up!"
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
